{
    "name": "antinomy",
    "version": "1.0.0",
    "description": "A digital adaptation of the card game Antinomy by ButtonShyGames",
    "main": "src/index.ts",
    "scripts": {
        "start": "nodemon -r dotenv/config ./src/index.ts",
        "test": "NODE_ENV=test jest --watch",
        "migrate": "sequelize db:migrate",
        "migrate:rollback": "sequelize db:migrate:undo",
        "migrate:rollback:all": "sequelize db:migrate:undo:all",
        "seed": "sequelize db:seed:all",
        "seed:rollback": "sequelize db:seed:undo",
        "seed:rollback:all": "sequelize db:seed:all",
        "clean": "ts-node -r dotenv/config ./src/tasks/clean_stale_games.task.ts"
    },
    "author": "Morgan Polak",
    "license": "ISC",
    "dependencies": {
        "@types/express": "^4.17.17",
        "@types/sequelize": "^4.28.15",
        "bcrypt": "^5.1.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "lodash.shuffle": "^4.2.0",
        "moment": "^2.29.4",
        "mysql2": "^3.2.4",
        "reflect-metadata": "^0.1.13",
        "sequelize": "^6.31.1",
        "sequelize-typescript": "^2.1.5",
        "socket.io": "^4.6.1",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.21.8",
        "@babel/preset-env": "^7.21.5",
        "@babel/preset-typescript": "^7.21.5",
        "@types/bcrypt": "^5.0.0",
        "@types/jest": "^29.5.1",
        "@types/lodash.shuffle": "^4.2.7",
        "@types/node": "^18.16.4",
        "@types/uuid": "^9.0.1",
        "@types/validator": "^13.7.15",
        "babel-jest": "^29.5.0",
        "cors": "^2.8.5",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "sequelize-cli": "^6.6.0",
        "sqlite3": "^5.1.6",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    }
}
